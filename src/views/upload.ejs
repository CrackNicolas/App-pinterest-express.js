<!doctype html>
<html lang="en">
    <head>
        <%- include("partials/head.ejs") %>
    </head>
    <body>
        <%- include("partials/navigation.ejs") %>
        <div class="container p-4 mt-5">
            <div class="row">
                <div class="col-md-4 offset-md-4">    
                    <div class="card">
                        <div class="card-body">
                            <form action="/upload" method="POST" enctype="multipart/form-data">
                                <input type="file" name="image" class="custom-file-input bg-red" id="inputGroupFile02">
                                <label class="header w-100 mb-3" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">
                                    <ion-icon name="image-outline"></ion-icon>
                                    <p>Upload image</p>
                                </label>
                                <div class="form-group">
                                    <input type="text" name="title" placeholder="Title..." class="w-100 p-2">
                                </div>
                                <div class="form-group">
                                    <textarea name="description" placeholder="Description..." class="w-100 p-2"></textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-add w-100">
                                        <ion-icon name="add-circle-outline"></ion-icon>
                                        <span>Upload</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>