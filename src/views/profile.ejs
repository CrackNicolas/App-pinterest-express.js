<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head.ejs") %>
</head>
<body>
    <%- include("partials/navigation.ejs") %>
    <div class="container p-4 mt-5">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card animated fadeInDOwn">
                    <img src="<%= image.path %>" class="card-img-top" alt="<%= image.description %>">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= image.title %>
                        </h5>
                        <p class="card-text">
                            <%= image.description %>
                        </p>
                        <p class="card-text">
                            <%= format(image.created_at) %>
                        </p>
                        <a href="/image/<%= image._id %>/delete" class="btn btn-danger btn-delete w-100">
                            <ion-icon name="trash-outline"></ion-icon>
                            <span>Delete image</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>